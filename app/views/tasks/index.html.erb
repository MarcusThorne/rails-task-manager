<h1>My Tasks</h1>

<div class="all">
  <% @tasks.each do |task| %>
    <div class="tasks">
      <i id="box" class="far fa-check-square"></i>
      <%= link_to task.title, task_path(task), id: "title" %>
      <%= link_to ('<i class="fas fa-trash"></i>').html_safe, delete_task_path(task), method: :delete, data: { confirm: "Are you sure you would like to DELETE" + " " + task.title }, id: "delete" %>
    </div>
  <% end %>
</div>

<%= link_to "Create Task", tasks_new_path, id:"create" %>
